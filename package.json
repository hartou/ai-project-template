{
  "name": "ai-project-template",
  "version": "1.0.0",
  "description": "A comprehensive template for AI-based projects with modern development practices",
  "main": "src/index.js",
  "type": "module",
  "keywords": [
    "ai",
    "machine-learning",
    "template",
    "typescript",
    "react",
    "node",
    "docker",
    "ci-cd"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "homepage": "https://github.com/your-username/your-project#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/your-project.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/your-project/issues"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "node --watch src/server.js",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "echo 'Backend build completed'",
    "start": "node src/server.js",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest --testPathPattern=testing/unit",
    "test:integration": "jest --testPathPattern=testing/integration",
    "test:e2e": "playwright test",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src frontend/src --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src frontend/src --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\" \"frontend/src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,md}\" \"frontend/src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "docs:generate": "typedoc src --out docs/api/generated",
    "docs:serve": "docsify serve docs",
    "docs:lint": "markdownlint docs/**/*.md",
    "docs:link-check": "markdown-link-check docs/**/*.md",
    "docker:build": "docker build -f deployment/container/Dockerfile -t ai-project .",
    "docker:run": "docker run -p 3000:3000 ai-project",
    "docker:dev": "docker-compose -f deployment/local/docker-compose.dev.yml up",
    "security:audit": "npm audit",
    "security:scan": "npm audit --audit-level moderate",
    "clean": "rm -rf node_modules frontend/node_modules dist frontend/dist coverage testing/test-results",
    "install:all": "npm install && cd frontend && npm install",
    "health-check": "curl -f http://localhost:3000/health || exit 1",
    "setup": "node scripts/setup.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "joi": "^17.11.0",
    "rate-limiter-flexible": "^3.0.8"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/morgan": "^1.9.9",
    "@types/jest": "^29.5.8",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "@playwright/test": "^1.40.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "supertest": "^6.3.3",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2",
    "docsify-cli": "^4.4.4",
    "typedoc": "^0.25.4",
    "markdownlint-cli": "^0.38.0",
    "markdown-link-check": "^3.12.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "testing/test-results/coverage",
    "collectCoverageFrom": [
      "src/**/*.{js,ts}",
      "!src/**/*.test.{js,ts}",
      "!src/**/*.d.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "<rootDir>/testing/unit/**/*.test.{js,ts}",
      "<rootDir>/testing/integration/**/*.test.{js,ts}"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/testing/setup.js"
    ]
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/explicit-function-return-type": "warn"
    }
  }
}